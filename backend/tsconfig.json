{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
"include": ["*.ts", "routes/**/*.ts", "controllers/**/*.ts", "models/**/*.ts", "db.ts"],
  "exclude": ["node_modules", "dist"]
}
